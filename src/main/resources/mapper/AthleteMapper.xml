<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aimlab.mapper.AthleteMapper">
    <!-- 结果映射 -->
    <resultMap id="athleteMap" type="com.aimlab.entity.Athlete">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="gender" column="gender"/>
        <result property="birthDate" column="birth_date"/>
        <result property="level" column="level"/>
        <result property="avatarData" column="avatar_data" jdbcType="BLOB"/>
        <result property="avatarType" column="avatar_type"/>
        <result property="approvalStatus" column="approval_status"/>
        <result property="modificationStatus" column="modification_status"/>
        <result property="pendingModificationData" column="pending_modification_data"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <!-- 插入新运动员信息 -->
    <insert id="insert" parameterType="com.aimlab.entity.Athlete" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO athletes (user_id, name, gender, birth_date, level, avatar_data, avatar_type, approval_status, created_at, updated_at)
        VALUES (#{userId}, #{name}, #{gender}, #{birthDate}, #{level}, #{avatarData, jdbcType=BLOB}, #{avatarType}, #{approvalStatus}, #{createdAt}, #{updatedAt})
    </insert>
    
    <!-- 根据ID查询运动员信息 -->
    <select id="findById" resultMap="athleteMap">
        SELECT * FROM athletes WHERE id = #{id}
    </select>
    
    <!-- 根据用户ID查询运动员信息 -->
    <select id="findByUserId" resultMap="athleteMap">
        SELECT * FROM athletes WHERE user_id = #{userId}
    </select>
    
    <!-- 更新运动员信息 -->
    <update id="update" parameterType="com.aimlab.entity.Athlete">
        UPDATE athletes
        SET name = #{name},
            gender = #{gender},
            birth_date = #{birthDate},
            level = #{level},
            approval_status = #{approvalStatus},
            modification_status = #{modificationStatus},
            pending_modification_data = #{pendingModificationData},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    
    <!-- 更新头像（BLOB存储） -->
    <update id="updateAvatar">
        UPDATE athletes SET avatar_data = #{avatarData, jdbcType=BLOB}, avatar_type = #{avatarType}, updated_at = NOW() WHERE id = #{id}
    </update>
    
    <!-- 删除运动员信息 -->
    <delete id="deleteById">
        DELETE FROM athletes WHERE id = #{id}
    </delete>

    <!-- 查询全部运动员 -->
    <select id="findAll" resultMap="athleteMap">
        SELECT * FROM athletes ORDER BY created_at DESC
    </select>

    <!-- 统计运动员数量 -->
    <select id="countAll" resultType="long">
        SELECT COUNT(*) FROM athletes
    </select>

    <!-- 按审批状态查询运动员 -->
    <select id="findByApprovalStatus" resultMap="athleteMap">
        SELECT *
        FROM athletes
        WHERE approval_status = #{status}
        ORDER BY created_at ASC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <!-- 统计指定审批状态的运动员数量 -->
    <select id="countByApprovalStatus" resultType="long">
        SELECT COUNT(*)
        FROM athletes
        WHERE approval_status = #{status}
    </select>

    <!-- 按修改状态查询运动员 -->
    <select id="findByModificationStatus" resultMap="athleteMap">
        SELECT *
        FROM athletes
        WHERE modification_status = #{status}
        ORDER BY updated_at DESC
    </select>
</mapper>
